<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/KsBlueDim"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/KsBlueDim">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuHeader"
            android:orientation="horizontal"
            android:background="@color/KsBlue"
            android:elevation="6dp"
            >

            <ImageView android:id="@+id/menuHeaderImage"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/backicon1"
                android:paddingHorizontal="10dp"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_weight="0"/>

            <TextView android:id="@+id/menuHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ClubDescriptionHeader"
                android:textColor="@color/KsWhite"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/menuHeaderButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="?android:selectableItemBackground"
                android:paddingVertical="10dp"
                android:scaleType="fitCenter"

                android:src="@drawable/menuheaderbuttonwhite" />
        </LinearLayout>

        <ScrollView
            android:layout_below="@id/menuHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/mainContentLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/ClubPlace"
                        android:textColor="@color/KsWhite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/ClubDescriptionPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/ClubPlace"
                        android:textColor="@color/KsWhite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/ClubTeacher"
                        android:textColor="@color/KsWhite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/ClubDescriptionTeacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/ClubPlace"
                        android:textColor="@color/KsWhite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/ClubCondition"
                        android:textColor="@color/KsWhite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/ClubCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/ClubPlace"
                        android:textColor="@color/KsWhite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/ClubEnter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:text="@string/ClubEnterUnavailable"
                    android:textColor="@color/KsOrange"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borderbottom"
                    android:paddingBottom="20dp"
                    />

                <TextView
                    android:id="@+id/ClubDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/ClubDescriptionDefault"
                    android:textColor="@color/KsWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    />


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>