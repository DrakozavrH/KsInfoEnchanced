<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScheduleTableHeaderRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/KsLightBlue</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ScheduleTableHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/KsWhite</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScheduleTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/KsBlue</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ScheduleTableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/KsLightBlue</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/KsWhite</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ScheduleTableCellTime" parent="ScheduleTableCell">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>