<resources xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScheduleCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardBackgroundColor">@color/KsBlue</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="ScheduleTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/KsBlue</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="StandardButton">

        <item name="android:background">@color/KsLightBlue</item>
        <item name="android:textColor">@color/KsWhite</item>


    </style>




</resources>